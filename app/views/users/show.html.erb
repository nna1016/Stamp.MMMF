<h3 class="scaf_section">ユーザー詳細</h3>
<div class="scaf_button" >
  <%= link_to '編集', edit_user_path(@user) %> | <nobr>
  <%= link_to '一覧へ', users_path %>
</nobr>
</div>
<div class="scaf_table">
<table>

  <tr>
    <th>学籍番号</th><td width="auto"><%= @user.student_no %></td>
  </tr>

  <tr>
    <th>プレイヤーネーム</th><td><%= @user.name %></td>
  </tr>

  <tr>
    <th>メールアドレス</th><td><%= @user.email %></td>
  </tr>

  <tr>
    <th>権限</th><td><%= @user.role_flag %></td>
  </tr>

  <tr>
    <th>メール認証</th><td width="auto"><%= @confirme %></td>
  </tr>

  <tr>
    <th>登録日時</th><td width="auto"><%= @user.created_at.strftime("%Y年%m月%d日%H時%M分") %></td>
  </tr>

  <tr>
    <th>最終ログイン</th><td width="auto"><%= @last_sign_in_at %></td>
  </tr>



</table>
</div>

<h3 class="scaf_section">スタンプ獲得履歴</h3><br>
<div  class="scaf_table">
<table>
  <thead>
    <tr>
      <th>スタンプID</th>
      <th>獲得日時</th>
    </tr>
  </thead>
  <tbody>
    <% @get_logs.each do |get_log| %>
      <tr>
        <td><%= get_log.stamp_id %></td>
        <td><%= get_log.created_at.strftime("%Y年 %m月 %d日 %H時%M分%S秒") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="scaf_button">
<%= link_to 'ユーザーの削除', @user, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
</div>
