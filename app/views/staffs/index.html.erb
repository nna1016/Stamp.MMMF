<p id="notice"><%= notice %></p>

<h1>Staffs</h1><%= link_to 'New Staff', new_staff_path %>

<table>
  <thead>
    <tr>
      <th>Staff</th>
      <th>Group</th>
      <th>Info</th>
      <th>QR</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
    <% @qr = ::RQRCode::QRCode.new(staff.staff_id,  level: :h) %>
      <tr>
        <td><%= staff.staff_id %></td>
        <td><%= staff.group %></td>
        <td><%= staff.info %></td>
        <td><%= image_tag ChunkyPNG::Image.from_datastream(@qr.as_png.to_datastream).resize(170, 170).to_data_url %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



